{
"name": "Word Counter",
"version": "1.0",
"description": "Counts the words you have highlighted and displays it in the context menu.",
"permissions": ["activeTab", 
                "contextMenus",
                "http://*/*",
                "https://*/*"
               ],
"manifest_version": 2,
"background": {
    "persistent": false,
    "scripts": ["background_script.js"]
}

}
